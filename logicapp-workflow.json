{
  "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "$connections": {
      "defaultValue": {},
      "type": "Object"
    }
  },
  "triggers": {
    "When_a_blob_is_added_to_private_storage": {
      "recurrence": {
        "frequency": "Minute",
        "interval": 1
      },
      "splitOn": "@triggerBody()",
      "type": "ApiConnection",
      "inputs": {
        "host": {
          "connection": {
            "name": "@parameters('$connections')['privatestorageconnector']['connectionId']"
          }
        },
        "method": "get",
        "path": "/datasets/default/triggers/batch/onupdatedfile",
        "queries": {
          "folderId": "/",
          "maxFileCount": 10
        }
      }
    }
  },
  "actions": {
    "Copy_blob_to_public_storage": {
      "runAfter": {},
      "type": "ApiConnection",
      "inputs": {
        "body": "@triggerBody()",
        "host": {
          "connection": {
            "name": "@parameters('$connections')['publicstorageconnector']['connectionId']"
          }
        },
        "method": "post",
        "path": "/datasets/default/files",
        "queries": {
          "folderPath": "/",
          "name": "@{formatDateTime(utcNow(),'MMddHHmm')}.@{split(triggerBody()?['Name'], '.')[1]}"
        }
      }
    }
  },
  "outputs": {}
}
